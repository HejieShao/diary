/**index.wxss**/
.diary-desc-container{
  width: 100%;
  overflow: hidden;
  background-color: #fff;
}

.diary-text{
  background-color: #fff;
  font-size: 12px;
  line-height: 20px;
  padding: 50px 0;
  margin: 0;
  text-align: center;
  color: #505050;
}

.diary-image{
  width: 100%;
  height: 320px;
}

.image-container{
  position: relative;
  width: 100%;
}

.admin-view-btn{
  width: 35px;
  height: 35px;
  position: fixed;
  bottom: 70px;
  right: 20px;
  z-index: 99;
}

.admin-view-icon{
  width: 100%;
  height: 100%;
}

.image-title{
  font-size: 40px;
  width: 100%;
  height: 90px;
  line-height: 90px;
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 0;
  margin-top: -45px;
  text-align: center;
  font-family: 'myfont';
  font-weight: normal;
  font-style: normal;
}
