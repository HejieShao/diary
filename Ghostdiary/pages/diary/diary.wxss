.container{
  padding-top: 10px;
  padding-bottom: 30px;
}

.diary-date{
  width: 100%;
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  color: #828282;
  text-align: center;
  background-color: #fff;
}

.diary-desc-container{
  position: relative;
  width: 100%;
  overflow: hidden;
  background-color: #fff;
  margin-bottom: 10px;
  margin-top: 10px;
}

.diary-image{
  width: 100%;
  height: 160px;
  float: left;
}

.diary-text{
  position: absolute;
  top: 50%;
  left: 0;
  margin-top: -20px;
  width: 100%;
  height: auto;
  color: #fff;
  font-size: 13px;
  text-align: center;
  line-height: 20px;
  z-index: 99;
}

.maskdiv{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  background-color: rgba(0,0,0,0.3);
}