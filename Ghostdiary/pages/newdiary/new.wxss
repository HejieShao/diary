.container{
  padding-bottom: 50px;
}

.top-bar{
  width: 100%;
  height: 75px;
  display: inline-flex;
  overflow: hidden;
  border-bottom: 1px solid #4c4c4c;
}

.icon-container{
  width: 33%;
  text-align: center;
}

.middle-container{
  border-left: 1px solid #4c4c4c;
  border-right: 1px solid #4c4c4c;
}

.bar-icon{
  width: 40px;
  height: 35px;
  vertical-align: middle;
  margin-top: 20px;
}

.edit-box{
  position: relative;
  width: 90%;
  margin: 40px auto 0 auto;
  overflow: hidden;
}

.normal-image{
  width: 100%;
  display: block;
}

.edit-text{
  border: 1px dotted #1c2229;
  border-top: 0;
  font-size: 12px;
  width: auto;
  padding: 2px;
  min-height: 40px;
  max-height: 70px;
  background-color: transparent;
}

.none{
  display: none !important;
}

.composing2{
  font-size: 12px;
  min-height: 40px;
  margin-top: 30px;
  margin-left: 10px;
  height: 100px !important;
  max-height: none !important;
  width: 82px !important;
  background-color: #fff;
  border: 0;
  word-break:break-all;
  word-wrap:break-word;
  white-space: pre-wrap;
  padding: 0;
  background: transparent;
}

.composing3{
  font-size: 12px;
  margin-left: 15px;
  margin-top: 20px;
  width: 145px !important;
  height: 140px !important;
  max-height: none !important;
  background: transparent;
  border: 0;
  padding: 2px;
  min-height: 40px;
}

.composingContainer2{
  position: absolute;
  right: 10px;
  top: 50%;
  margin-top: -80px;
  width: 100px;
  height: 160px;
}

.composingContainer3{
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -90px;
  margin-left: -90px;
  width: 180px;
  height: 180px;
}

.align-container{
  width: 154px;
  height: 20px;
  margin: 20px auto 0 auto;
  border:1px solid #4c4c4c;
  border-radius: 50px;
  display: flex;
  font-size: 12px;
  color: #1c2229;
}

.align-text{
  width: 50px;
  height: 20px;
  line-height: 20px;
  text-align: center;
}

.middle-align{
  border-left: 1px solid #4c4c4c;
  border-right: 1px solid #4c4c4c;
}

.button-container{
  width: 220px;
  height: 30px;
  display: flex;
  margin: 40px auto 0 auto;
}

.change-photo{
  margin-right: 40px;
}

.button-normal{
  width: 90px;
  height: 30px;
  font-size: 12px;
  line-height: 30px;
}

.text-align-left{
  text-align: left;
}

.text-align-center{
  text-align: center;
}

.text-align-right{
  text-align: right;
}