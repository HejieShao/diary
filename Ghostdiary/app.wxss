/**app.wxss**/
page{
	background-color: #fff;
}
.container {
  height: 100%;
  padding-bottom: 40px;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/**底部banner**/
.bottom-banner {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40px;
  border-top: 1px solid #888;
  align-items: center;
  background-color: #fff;
  z-index: 9999;
}

.bottom-container{
  width: 305px;
  height: 100%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
}

.btn-item{
  position: relative;
  width: 70px;
  text-align: center;
  font-size: 16px;
  color: #072b3e;
}

.btn-item.middle{
  margin: 0 40px;
}

.item-icon{
  position: relative;
  display: block;
  width: auto;
  height: auto;
  top: 7px;
  left: 50%;
  float: left;
}

.home-icon{
  width: 26px;
  height: 20px;
  margin-left: -13px;
}

.diary-icon{
  width: 26px;
  height: 20px;
  margin-left: -13px;
}

.calendar-icon{
  width: 26px;
  height: 20px;
  margin-left: -13px;
}

.btn-item .text{
  width: 100%;
  float: left;
  display: block;
  transform: scale(0.5,0.5);
  margin-top: 2px;
}